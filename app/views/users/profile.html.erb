<div class="cont-profile">
  <div class="sidebar">
    <h3>Account</h3>
    <h3>Bookings</h3>
    <h3>Products</h3>
  </div>
  <div class="information">
    <h2>Account Settings</h2>
    <hr>
    <div class="name">
      <div class="first_name">
        <h4> First name : </h4>
        <p><%= current_user.first_name %></p>
      </div>
      <div class="last_name">
        <h4> First name : </h4>
        <p> <%= current_user.last_name %></p>
      </div>
    </div>
    <div class="email">
      <h4> Email : </h4>
      <p> <%= current_user.email %></p>
    </div>

  </div>
</div>

  <% current_user.articles.each do |article| %>
      <p><%= article.name %> - price : <%= article.price %> M</p>
    <% end %>
