<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= form_with url: root_path(anchor: 'redirect_logged'), method: :get, class: "d-flex my-2 my-lg-0" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find an Article"
      %>
      <%# <button class="btn btn-outline-light my-2 my-sm-0" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button> %>
      <%= submit_tag "Search", class: "btn btn-outline-light my-2 my-sm-0" %>
    <% end %>

    <p class="hello_message"> <% if current_user %>
    Hello <%= current_user.first_name %> !
    <% end %> </p>

    <% if current_user %>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto">
            <li class="nav-item dropdown">
              <div class="dropdown-toggle btn btn-outline-light" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">My Profile</div>
              <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <div><%= link_to "My account", profile_path, class: "dropdown-item" %></div>

                <a class="dropdown-item" href="#">Bookings</a>
                <a class="dropdown-item" href="articles/new">Create an experience</a>

                <div class="logout">
                <%= button_to("Log out", destroy_user_session_path,
                  data: {turbo: false},
                  method: :delete
                ) %>
                </div>
            </li>
            <!--li class="nav-item"-->
            <!--/li-->
        </ul>
      </div>
    <% end %>
  </div>
</div>
